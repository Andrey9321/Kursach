unit KP7;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.jpeg, Vcl.ExtCtrls,
  Vcl.ComCtrls, Vcl.StdCtrls, Vcl.Imaging.pngimage;

type
  TForm7 = class(TForm)
    Image1: TImage;
    xxxx: TProgressBar;
    Timer1: TTimer;
    Label1: TLabel;
    Image2: TImage;
    procedure Timer1Timer(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form7: TForm7;
  filepath:string;

implementation

{$R *.dfm}

uses KP6, KP;

procedure TForm7.FormCreate(Sender: TObject);
begin
//filepath:=ExtractFilePath(Application.ExeName)+'медиа\';

xxxx.Position := 0;
label1.visible:=false;
end;

procedure TForm7.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
if (key=32) and label1.visible=true then
begin
form1.Show;
form7.Hide;
xxxx.Position := 0;
label1.visible:=false;
form1.mediaplayer1.Play;
end;
end;

procedure TForm7.Timer1Timer(Sender: TObject);
begin
if image2.Left<>550 then
begin
    xxxx.Position := xxxx.Position + 1 ;
    image2.Left:=image2.Left +3;
end
  else
  begin
      label1.visible:=true;
      Label1.BringToFront;
  end;
end;

end.
