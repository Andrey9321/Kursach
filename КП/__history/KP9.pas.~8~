{$R *.dfm}

uses KP2;

function SortByWord(const Lines: TStrings; const SortWord: string): TStringList;
var
  i: Integer;
  NewLines: TStringList;
begin
  NewLines := TStringList.Create;
    for i := 0 to Lines.Count - 1 do
    begin
      if Pos(SortWord, Lines[i]) > 0 then
        NewLines.Add(Lines[i]);
    end;
    Result := NewLines;
end;



procedure TForm9.Button1Click(Sender: TObject);
var
  SortedLines: TStringList;
begin
 if Trim(Edit1.Text) <> '' then
 begin
   SortedLines := SortByWord(Memo1.Lines, Edit1.Text);
   Memo1.Lines.Text := SortedLines.Text;
   if Memo1.Lines.Text='' then
   begin
       showmessage('Ой, такого унас нет(');
       form9.memo1.lines.loadfromfile('медиа\сылки\животные.txt');
   end;
 end
 else
 form9.memo1.lines.loadfromfile('медиа\сылки\животные.txt');
end;

procedure TForm9.ComboBox1Change(Sender: TObject);
begin
  if ComboBox1.Text = 'Сортировка по алфавиту'  then
  begin
    if memo1.visible=true then
      begin
        Lines := TStringList.Create;
        Lines.Text := Memo1.Text;
        Lines.Sort;
        Memo1.Lines.Text := Lines.Text;
        Lines.Free;
      end
    else
      begin
        Lines := TStringList.Create;
        Lines.Text := Memo2.Text;
        Lines.Sort;
        Memo2.Lines.Text := Lines.Text;
        Lines.Free;
      end;
  end;
  if ComboBox1.Text = 'Сортировка по видам'  then
//  SortMemoByAnimalType;
end;

procedure TForm9.SpeedButton1Click(Sender: TObject);
begin
memo1.Visible :=true;
memo2.visible:=false;
combobox1.Visible :=true;
form9.memo1.lines.loadfromfile('медиа\сылки\животные.txt');
ComboBox1.Items.Clear;
combobox1.text:=('Выберите вид сортировки');
combobox1.Items.add('Сортировка по алфавиту');
combobox1.Items.add('Сортировка по видам');
edit1.Visible :=true;
end;

procedure TForm9.SpeedButton2Click(Sender: TObject);
begin
memo2.visible:=true;
memo1.visible:=false;
combobox1.Visible :=true;
form9.memo2.lines.loadfromfile('медиа\сылки\растения.txt');
ComboBox1.Items.Clear;
combobox1.text:=('Выберите вид сортировки');
combobox1.Items.add('Сортировка по алфавиту');
combobox1.Items.add('Сортировка по видам');
combobox1.Items.add('Сортировка по статусу охраны');
edit2.Visible :=true;
end;

procedure TForm9.SpeedButton3Click(Sender: TObject);
begin
form9.close;
form2.show;
end;



end.
