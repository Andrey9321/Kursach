var
  Form8: TForm8;

implementation

{$R *.dfm}

uses KP2, KP9;

function SortByWord(const Lines: TStrings; const SortWord: string): TStringList;
var
  i: Integer;
  NewLines: TStringList;
begin
  NewLines := TStringList.Create;
  try
    for i := 0 to Lines.Count - 1 do
    begin
      if Pos(SortWord, Lines[i]) > 0 then
        NewLines.Add(Lines[i]);
    end;

    Result := NewLines;
    except
    NewLines.Free;
    raise;
    end;
  end;

procedure TForm8.Button1Click(Sender: TObject);
var
  SortedLines: TStringList;
begin
  if Trim(Edit1.Text) <> '' then
 begin
   SortedLines := SortByWord(Memo1.Lines, Edit1.Text);
   Memo1.Lines.Text := SortedLines.Text;
   if Memo1.Lines.Text='' then
   begin
      showmessage('Ой, такого унас нет(');
      form9.memo1.lines.loadfromfile('медиа\сылки\растения.txt');
   end;
 end
 else
  form9.memo1.lines.loadfromfile('медиа\сылки\растения.txt');
end;

procedure TForm8.ComboBox1Change(Sender: TObject);
begin
  if ComboBox1.Text = 'Сортировка по алфавиту'  then
  begin
    if memo1.visible=true then
      begin
        Lines := TStringList.Create;
        Lines.Text := Memo1.Text;
        Lines.Sort;
        Memo1.Lines.Text := Lines.Text;
        Lines.Free;
      end
  end;
end;

procedure TForm8.FormCreate(Sender: TObject);
begin
form8.memo1.lines.loadfromfile('медиа\сылки\растения.txt');
ComboBox1.Items.Clear;
combobox1.text:=('Выберите вид сортировки');
combobox1.Items.add('Сортировка по алфавиту');
combobox1.Items.add('Сортировка по видам');
combobox1.Items.add('Сортировка по статусу охраны');
end;

procedure TForm8.SpeedButton1Click(Sender: TObject);
begin
form8.hide;
form9.Show;
form9.memo1.lines.loadfromfile('медиа\сылки\животные.txt');
form9.ComboBox1.Items.Clear;
form9.combobox1.text:=('Выберите вид сортировки');
form9.combobox1.Items.add('Сортировка по алфавиту');
form9.combobox1.Items.add('Сортировка по видам');
end;

procedure TForm8.SpeedButton2Click(Sender: TObject);
begin
 form8.memo1.lines.loadfromfile('медиа\сылки\растения.txt');
ComboBox1.Items.Clear;
combobox1.text:=('Выберите вид сортировки');
combobox1.Items.add('Сортировка по алфавиту');
combobox1.Items.add('Сортировка по видам');
combobox1.Items.add('Сортировка по статусу охраны');
end;

procedure TForm8.SpeedButton3Click(Sender: TObject);
begin
form8.close;
form2.show;
end;

end.
