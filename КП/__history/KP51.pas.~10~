procedure TForm8.FormCreate(Sender: TObject);
begin
  count := 1;
  mediaplayer1.open;
  mediaplayer1.DisplayRect:=panel1.ClientRect;
end;

procedure TForm8.SpeedButton1Click(Sender: TObject);
begin
 if count<6 then
       begin
      count := count + 1;
           var path:='медиа\кпкартинки\видеоKP2\'+inttostr(count)+ '.avi';
           mediaplayer1.Close;
           mediaplayer1.FileName	:=path;
           mediaplayer1.open;
            mediaplayer1.DisplayRect:=panel1.ClientRect;
           mediaplayer1.Play;
       end
       else
       begin
       count:=1;
           var path:='медиа\кпкартинки\видеоKP2\'+inttostr(count)+ '.avi';
           mediaplayer1.Close;
           mediaplayer1.FileName	:=path;
           mediaplayer1.open;
           mediaplayer1.DisplayRect:=panel1.ClientRect;
           mediaplayer1.Play;
       end;


end;

procedure TForm8.SpeedButton2Click(Sender: TObject);
begin
mediaplayer1.Position :=0;
mediaplayer1.play;
end;

